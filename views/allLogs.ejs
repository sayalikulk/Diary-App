<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        body{
            background-color:rgb(243, 215, 219);
        }
        .container{
            align-items: center;
            width:50%;
            padding: 50px;

        }
        .text{
            padding-top: 20px;
        }
        .container-2{
          padding-top: 50px;
        }
        .hello{
          padding:20px;
        }
        
    </style>
    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Diary App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link active" href="home">Home <span class="sr-only">(current)</span></a>
            
            <a class="nav-item nav-link" href="all-logs">All logs</a>
            <a class="nav-item nav-link" href="log">Logout</a>
          </div>
        </div>
    </nav>
    <small id="emailHelp" class="form-text text-muted">To delete, erase the message written and save it.</small>
    <div class="container">
      <% for(var i=0; i < obj.length; i++) { %>
        <div class="container-2">
          <form action="/diary/all-logs" method="post">
            <textarea style="height: 35px;" class="form-control" name="date"><%= obj[i].date %></textarea>
            <textarea style="height: 200px;" type="email" class="form-control" name="message" id="email" aria-describedby="emailHelp" placeholder="Enter your log"><%= obj[i].message %></textarea>
            <div class="hello">
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
            
          </form>
        </div>  
      <% } %>
  </div>
    
       
        
</body>
